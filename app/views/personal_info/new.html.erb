<div class="personal-info">

  <!-- header row -->
  <div class="row mb-md-4">
    <div class="col-md-10">
      <h1>Personal Information</h1>
    </div>

    <div class="col-md-2 d-md-flex justify-content-md-end">
      <%= link_to(raw('<i class="fas fa-window-close"></i> Cancel'), personal_info_path(current_user), class: 'btn btn-outline-danger mt-md-auto mb-md-auto') %>
    </div>
  </div>

  <!-- form div -->
  <div class="row">
    <div class="col-md-12">
      <%= form_with model: @personal_info, url: personal_info_index_path, class: 'bg-pineapple rounded col-md-12 p-md-4' do |form| %>
        <h2 class="mb-md-4">Here you can add your personal information</h2>

        <div class="form-group">
          <%= form.label :full_name, 'Full Name:' %>
          <%= form.text_field :full_name, class: 'form-control' %>
        </div>

        <div class="d-md-flex">
          <div class="form-group col-md-4 pl-md-0">
            <%= form.label :birth_date, 'Birth Date:' %>
            <%= form.date_field :birth_date, class: 'form-control' %>
          </div>

          <div class="form-group col-md-8 pr-md-0">
            <%= form.label :nationality, 'Nationality:' %>
            <%= form.text_field :nationality, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :description, 'Description:' %>
          <%= form.text_area :description, class: 'form-control', rows: 5 %>
        </div>

        <div class="form-group mb-md-3">
          <%= form.label :profile_img, 'Profile Img:' %>
          <%= form.file_field :profile_img, class: 'd-md-block' %>
        </div>

        <%= form.submit 'Save', class: 'btn btn-success btn-block' %>
      <% end %>
    </div>
  </div>
</div>