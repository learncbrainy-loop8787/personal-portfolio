<div class="signup sign-form col-md-4 ml-md-auto mr-md-auto bg-white p-md-4 rounded shadow-lg">
  <h2 class="text-center mb-md-3">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field mb-md-3">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "given-name", class: "form-control", placeholder: "Name" %>
    </div>

    <div class="field mb-md-3">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autocomplete: "family-name", class: "form-control", placeholder: "Last Name" %>
    </div>

    <div class="field mb-md-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Email" %>
    </div>

    <div class="field mb-md-3">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em class="text-black-50">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
    </div>

    <div class="field mb-md-3">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password" %>
    </div>

    <div class="actions mb-md-3">
      <%= f.submit "Sign up", class: "btn btn-block btn-success" %>
    </div>
  <% end %>

  <div>
    <span>Already registered? </span>
    <%= render "devise/shared/links" %>
  </div>
</div>